<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_large"
    android:background="@drawable/selector_item"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/spacing_normal"
    android:paddingRight="@dimen/spacing_normal">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/size_normal"
        android:layout_height="@dimen/size_normal"
        android:layout_marginTop="@dimen/spacing_smaller"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_huge"
        android:layout_marginStart="@dimen/spacing_huge"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_small">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingRight="@dimen/spacing_smaller"
            android:text="Nameffffffffffffffffffffffffffffffffffffffffffff"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/font_normal"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tv_gift_counts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="22.12.1985"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/font_small" />

    </LinearLayout>
</FrameLayout>